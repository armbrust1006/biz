<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="global.scit.bizcard.dao.NoteDAO" >

<select id="noteList" resultType="Note" parameterType="String">
	select  to_char(startdate, 'yyyy-MM-dd') as "start", to_char(enddate, 'yyyy-MM-dd') as "end", note as "title"
	from cardnote_test
	where m_id=#{m_id}
</select>

<insert id="addNote" parameterType="Note">
	insert into CARDNOTE_TEST values(
		#{m_id}, '1', #{start}, #{end}, sysdate, #{title}
	) 
</insert>

</mapper>